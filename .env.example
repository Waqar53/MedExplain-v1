# MedExplain AI - Environment Configuration
# Copy this file to .env and fill in your values

# =============================================================================
# LLM Configuration (Choose ONE option)
# =============================================================================

# OPTION 1: Google Gemini (FREE - Recommended for testing)
# Get your free API key at: https://makersuite.google.com/app/apikey
# GEMINI_API_KEY=your-gemini-api-key-here

# OPTION 2: OpenAI (Paid)
# OPENAI_API_KEY=your-openai-api-key-here
# OPENAI_MODEL=gpt-4-turbo-preview

# OPTION 3: Ollama (Local - Free but requires local installation)
# LLM_PROVIDER=ollama
# OLLAMA_BASE_URL=http://localhost:11434
# OLLAMA_MODEL=llama2

# NOTE: If no API key is set, the app runs in DEMO mode with sample responses
# =============================================================================
APP_NAME=MedExplain AI
APP_VERSION=1.0.0
DEBUG=false
LOG_LEVEL=INFO

# =============================================================================
# Server Configuration
# =============================================================================
HOST=0.0.0.0
PORT=8000

# =============================================================================
# Rate Limiting
# =============================================================================
RATE_LIMIT_PER_MINUTE=30
RATE_LIMIT_PER_HOUR=200

# =============================================================================
# File Upload Settings
# =============================================================================
MAX_FILE_SIZE_MB=10
ALLOWED_PDF_EXTENSIONS=.pdf
ALLOWED_IMAGE_EXTENSIONS=.png,.jpg,.jpeg,.dicom,.dcm
ALLOWED_TEXT_EXTENSIONS=.txt,.doc,.docx

# =============================================================================
# Model Configuration
# =============================================================================
VISION_MODEL=resnet50
CONFIDENCE_THRESHOLD_LOW=0.3
CONFIDENCE_THRESHOLD_HIGH=0.7

# =============================================================================
# Output Settings
# =============================================================================
OUTPUT_DIR=outputs
TEMP_DIR=temp

# =============================================================================
# Multi-Tenant Configuration
# =============================================================================
ENABLE_MULTI_TENANT=true
DEFAULT_TENANT_ID=default-clinic
